package basics;

import java.util.*;
import java.util.Scanner;

public class FizzBuzzGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in); // Open scanner resource
        while(true) {
        	
        		System.out.println("Enter your Number: ");
        		String number = scanner.nextLine();
        		int extractedNumber = Integer.parseInt(number);
        		if(scanner.hasNextInt()) {
        		if(scanner.hasNextInt() && extractedNumber %3 == 0  && extractedNumber %5 != 0) {
        			System.out.println("Fizz");
        		}
        		else if(scanner.hasNextInt() && extractedNumber % 5 == 0 && extractedNumber %3 != 0) {
        			System.out.println("Buzz");
        		}
        		else if(scanner.hasNextInt() && extractedNumber % 5 == 0 && extractedNumber %3 == 0) {
        			
        		}
        		else {
        			System.out.println("Insert another:");
        			number = scanner.nextLine();
        		}
        		}
        		else {
        			System.out.println("Insert another:");
        			number = scanner.nextLine();
        		}
        	
        }
        
    }
    
}


